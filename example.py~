from  markov_lab import MarkovProcess
#crazy coke machine example

#states
nstates = 2

#coke prefering state 0
#iced tea prefering state 1

K = ["cola","ice_t","lem"]

Pi = {0:1}

A = {}
A[0] = {0:0.7,1:0.3}
A[1] = {0:0.5,1:0.5}

emission_probs = {}
emission_probs[0] = {"cola": 0.6,"ice_t": 0.1,"lem":0.3}
emission_probs[1] = {"cola":0.1,"ice_t":0.7,"lem":0.2}


example_mp = MarkovProcess(nsstates,K,Pi,A,emission_probs)
